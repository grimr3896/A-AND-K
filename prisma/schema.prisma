
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
  binaryTargets   = ["native", "debian-openssl-3.0.x"]
}

model Product {
  id                String  @id @default(cuid())
  name              String
  sku               String? @unique
  category          String
  stock             Int
  price             Float
  lowStockThreshold Int
  cost              Float
  minPrice          Float
  supplier          String?
  description       String?
  imageUrl          String?

  saleItems SaleItem[]
}

model User {
  id       String @id @default(cuid())
  username String @unique
  role     String
}

model Sale {
  id            String     @id @default(cuid())
  date          DateTime   @default(now())
  customerName  String
  total         Float
  paymentMethod String
  items         SaleItem[]
}

model SaleItem {
  id        String   @id @default(cuid())
  sale      Sale     @relation(fields: [saleId], references: [id], onDelete: Cascade)
  saleId    String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Restrict)
  productId String
  name      String
  quantity  Int
  price     Float
}

model Layaway {
  id              String    @id @default(cuid())
  customerName    String
  productName     String
  totalAmount     Float
  amountPaid      Float
  status          String
  lastPaymentDate DateTime
  createdAt       DateTime  @default(now())
  payments        Payment[]
}

model Payment {
  id        String   @id @default(cuid())
  layaway   Layaway  @relation(fields: [layawayId], references: [id], onDelete: Cascade)
  layawayId String
  date      DateTime @default(now())
  amount    Float
  method    String
}

model AuditLog {
  id      String   @id @default(cuid())
  date    DateTime @default(now())
  user    String
  action  String
  details String
}

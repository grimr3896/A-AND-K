
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider   = "prisma-client-js"
  engineType = "node-api"
}

model Product {
  id                String   @id @default(cuid())
  name              String   @unique
  sku               String?  @unique
  category          String
  stock             Int
  price             Float
  lowStockThreshold Int      @default(5)
  cost              Float
  minPrice          Float
  supplier          String?
  description       String?
  imageUrl          String?  @default("https://placehold.co/150x150.png")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  saleItems         SaleItem[]
}

model Sale {
  id            String     @id @default(cuid())
  date          DateTime   @default(now())
  customerName  String
  items         SaleItem[]
  total         Float
  paymentMethod String
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model SaleItem {
  id        String   @id @default(cuid())
  sale      Sale     @relation(fields: [saleId], references: [id])
  saleId    String
  product   Product  @relation(fields: [productId], references: [id])
  productId String
  name      String
  quantity  Int
  price     Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Layaway {
  id              String    @id @default(cuid())
  customerName    String
  productName     String
  totalAmount     Float
  amountPaid      Float
  status          String // e.g., 'Pending', 'Paid', 'Cancelled'
  lastPaymentDate DateTime
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  payments        Payment[]
}

model Payment {
  id        String   @id @default(cuid())
  layaway   Layaway  @relation(fields: [layawayId], references: [id])
  layawayId String
  date      DateTime @default(now())
  amount    Float
  method    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @default(now())
  user      String
  action    String
  details   String
}

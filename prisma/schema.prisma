// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
  binaryTargets   = ["native", "debian-openssl-3.0.x"]
  engineType      = "library"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Product {
  id                String  @id @default(cuid())
  name              String
  sku               String  @unique
  category          String
  stock             Int
  price             Float
  lowStockThreshold Int
  cost              Float
  minPrice          Float
  supplier          String?
  description       String?
  imageUrl          String?

  saleItems SaleItem[]
}

model Sale {
  id            String     @id @default(cuid())
  date          DateTime   @default(now())
  customerName  String
  items         SaleItem[]
  total         Float
  paymentMethod String
}

model SaleItem {
  id        String  @id @default(cuid())
  saleId    String
  sale      Sale    @relation(fields: [saleId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  name      String
  quantity  Int
  price     Float
}

model Layaway {
  id              String    @id @default(cuid())
  customerName    String
  productName     String
  totalAmount     Float
  amountPaid      Float
  status          String // "Pending", "Paid", "Cancelled"
  lastPaymentDate DateTime  @default(now())
  payments        Payment[]
}

model Payment {
  id        String   @id @default(cuid())
  layawayId String
  layaway   Layaway  @relation(fields: [layawayId], references: [id])
  date      DateTime @default(now())
  amount    Float
  method    String // "Cash", "M-Pesa", "Card"
}

model AuditLog {
  id        String   @id @default(cuid())
  timestamp DateTime @default(now())
  user      String
  action    String
  details   String
}

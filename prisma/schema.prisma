// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// --- Data Models ---

model Product {
  id                String  @id @default(cuid())
  name              String
  sku               String  @unique
  category          String
  stock             Int
  price             Float
  lowStockThreshold Int
  cost              Float
  minPrice          Float
  supplier          String?
  description       String?
  imageUrl          String?
  saleItems         SaleItem[]
}

model Sale {
  id            String    @id @default(cuid())
  date          DateTime  @default(now())
  customerName  String
  total         Float
  paymentMethod String
  items         SaleItem[]
}

model SaleItem {
  id        String  @id @default(cuid())
  saleId    String
  productId String
  name      String
  quantity  Int
  price     Float
  sale      Sale    @relation(fields: [saleId], references: [id], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id], onDelete: Restrict)
}

model Layaway {
  id              String    @id @default(cuid())
  customerName    String
  productName     String
  totalAmount     Float
  amountPaid      Float
  status          String // e.g., "Pending", "Paid", "Cancelled"
  lastPaymentDate DateTime  @default(now())
  payments        Payment[]
}

model Payment {
  id        String   @id @default(cuid())
  layawayId String
  date      DateTime @default(now())
  amount    Float
  method    String
  layaway   Layaway  @relation(fields: [layawayId], references: [id], onDelete: Cascade)
}

model AuditLog {
  id        String   @id @default(cuid())
  timestamp DateTime @default(now())
  user      String
  action    String
  details   String
}

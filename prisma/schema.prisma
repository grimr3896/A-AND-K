// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  // The "native" binaryTarget is not specified as the default anymore.
  // The node-api is used by default, but the openssl-3.0.x is a fallback for some environments.
  binaryTargets   = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Product {
  id                String  @id @default(cuid())
  name              String
  sku               String  @unique
  category          String
  stock             Int
  price             Float
  lowStockThreshold Int
  cost              Float
  minPrice          Float
  supplier          String?
  description       String?
  imageUrl          String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  saleItems         SaleItem[]
}

model Sale {
  id            String    @id @default(cuid())
  date          DateTime  @default(now())
  customerName  String
  total         Float
  paymentMethod String
  items         SaleItem[]
  createdAt     DateTime  @default(now())
}

model SaleItem {
  id        String   @id @default(cuid())
  sale      Sale     @relation(fields: [saleId], references: [id])
  saleId    String
  product   Product  @relation(fields: [productId], references: [id])
  productId String
  name      String
  quantity  Int
  price     Float
  createdAt DateTime @default(now())
}

model Layaway {
  id              String    @id @default(cuid())
  customerName    String
  productName     String
  totalAmount     Float
  amountPaid      Float
  status          String // Pending, Paid, Cancelled
  lastPaymentDate DateTime
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  payments        Payment[]
}

model Payment {
  id        String   @id @default(cuid())
  layaway   Layaway  @relation(fields: [layawayId], references: [id])
  layawayId String
  date      DateTime @default(now())
  amount    Float
  method    String // Cash, M-Pesa, Card, Initial Deposit
}

model User {
  id       String @id @default(cuid())
  username String @unique
  role     String // Admin, Manager, Staff
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @default(now())
  user      String
  action    String
  details   String
}

// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  // Using debian-openssl-3.0.x is generally safer for modern Linux environments
  // as many have deprecated OpenSSL 1.1.
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id                String  @id @default(cuid())
  name              String
  sku               String  @unique
  category          String
  stock             Int
  price             Float
  lowStockThreshold Int
  cost              Float
  minPrice          Float
  supplier          String?
  description       String?
  imageUrl          String?

  saleItems SaleItem[]
}

model Sale {
  id            String     @id @default(cuid())
  date          DateTime   @default(now())
  customerName  String
  total         Float
  paymentMethod String
  items         SaleItem[]
}

model SaleItem {
  id        String  @id @default(cuid())
  sale      Sale    @relation(fields: [saleId], references: [id], onDelete: Cascade)
  saleId    String
  product   Product @relation(fields: [productId], references: [id])
  productId String
  name      String
  quantity  Int
  price     Float
}

model Layaway {
  id              String    @id @default(cuid())
  customerName    String
  productName     String
  totalAmount     Float
  amountPaid      Float
  status          String // "Pending", "Paid", "Cancelled"
  lastPaymentDate DateTime  @default(now())
  payments        Payment[]
}

model Payment {
  id         String   @id @default(cuid())
  layaway    Layaway  @relation(fields: [layawayId], references: [id], onDelete: Cascade)
  layawayId  String
  date       DateTime @default(now())
  amount     Float
  method     String // "Cash", "M-Pesa", "Card"
}

model AuditLog {
  id        String   @id @default(cuid())
  timestamp DateTime @default(now())
  user      String
  action    String
  details   String
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id                String  @id @default(cuid())
  name              String  @unique
  sku               String? @unique
  category          String
  stock             Int
  price             Float
  lowStockThreshold Int
  cost              Float
  minPrice          Float
  supplier          String?
  description       String?
  imageUrl          String? @default("https://placehold.co/150x150.png")
}

model Sale {
  id            String    @id @default(cuid())
  date          DateTime  @default(now())
  customerName  String
  total         Float
  paymentMethod String
  items         SaleItem[]
}

model SaleItem {
  id        String  @id @default(cuid())
  sale      Sale    @relation(fields: [saleId], references: [id], onDelete: Cascade)
  saleId    String
  productId String
  name      String
  quantity  Int
  price     Float
}

model Layaway {
  id              String    @id @default(cuid())
  customerName    String
  productName     String
  totalAmount     Float
  amountPaid      Float
  status          String // e.g., 'Pending', 'Paid', 'Cancelled'
  createdAt       DateTime  @default(now())
  lastPaymentDate DateTime
  payments        Payment[]
}

model Payment {
  id        String   @id @default(cuid())
  layaway   Layaway  @relation(fields: [layawayId], references: [id], onDelete: Cascade)
  layawayId String
  date      DateTime @default(now())
  amount    Float
  method    String // e.g., 'Cash', 'M-Pesa', 'Card'
}

model AuditLog {
  id        String   @id @default(cuid())
  timestamp DateTime @default(now())
  user      String
  action    String
  details   String
}

// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client-js"
  engineType = "node-api"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Product {
  id                String  @id @default(cuid())
  name              String  @unique
  sku               String? @unique
  category          String
  stock             Int     @default(0)
  price             Float
  cost              Float
  minPrice          Float
  lowStockThreshold Int     @default(5)
  supplier          String?
  description       String?
  imageUrl          String? @default("https://placehold.co/150x150.png")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  saleItems SaleItem[]
}

model Sale {
  id            String    @id @default(cuid())
  date          DateTime  @default(now())
  customerName  String
  total         Float
  paymentMethod String
  items         SaleItem[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model SaleItem {
  id        String   @id @default(cuid())
  sale      Sale     @relation(fields: [saleId], references: [id])
  saleId    String
  product   Product  @relation(fields: [productId], references: [id])
  productId String
  name      String
  quantity  Int
  price     Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Layaway {
  id              String    @id @default(cuid())
  customerName    String
  productName     String
  totalAmount     Float
  amountPaid      Float     @default(0)
  status          String    @default("Pending") // Pending, Paid, Cancelled
  lastPaymentDate DateTime
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  payments        Payment[]
}

model Payment {
  id        String   @id @default(cuid())
  layaway   Layaway  @relation(fields: [layawayId], references: [id])
  layawayId String
  amount    Float
  method    String
  date      DateTime @default(now())
}

model AuditLog {
  id        String   @id @default(cuid())
  timestamp DateTime @default(now())
  user      String
  action    String
  details   String
}

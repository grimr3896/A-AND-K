// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client-js"
  engineType = "node-api"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Product {
  id                String  @id @default(cuid())
  name              String  @unique
  sku               String? @unique
  category          String
  stock             Int
  price             Float
  cost              Float
  minPrice          Float
  lowStockThreshold Int
  imageUrl          String?
  supplier          String?
  description       String?
  saleItems         SaleItem[]
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Sale {
  id            String     @id @default(cuid())
  date          DateTime   @default(now())
  customerName  String
  total         Float
  paymentMethod String
  items         SaleItem[]
}

model SaleItem {
  id        String  @id @default(cuid())
  sale      Sale    @relation(fields: [saleId], references: [id])
  saleId    String
  product   Product @relation(fields: [productId], references: [id])
  productId String
  name      String
  quantity  Int
  price     Float
}

model Layaway {
  id              String    @id @default(cuid())
  customerName    String
  productName     String
  totalAmount     Float
  amountPaid      Float
  status          String // e.g., 'Pending', 'Paid', 'Cancelled'
  lastPaymentDate DateTime
  payments        Payment[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Payment {
  id        String   @id @default(cuid())
  layaway   Layaway  @relation(fields: [layawayId], references: [id])
  layawayId String
  amount    Float
  date      DateTime @default(now())
  method    String
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @default(now())
  user      String
  action    String
  details   String
}
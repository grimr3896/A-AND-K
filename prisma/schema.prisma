
generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
  engineType    = "library"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id                String  @id @default(cuid())
  name              String
  sku               String? @unique
  category          String
  stock             Int
  price             Float
  lowStockThreshold Int     @default(5)
  cost              Float
  minPrice          Float
  supplier          String?
  description       String?
  imageUrl          String?
}

model Sale {
  id            String    @id @default(cuid())
  date          DateTime  @default(now())
  customerName  String
  total         Float
  paymentMethod String
  items         SaleItem[]
}

model SaleItem {
  id        String  @id @default(cuid())
  saleId    String
  productId String
  name      String
  quantity  Int
  price     Float
  sale      Sale    @relation(fields: [saleId], references: [id], onDelete: Cascade)
}

model Layaway {
  id              String    @id @default(cuid())
  customerName    String
  productName     String
  totalAmount     Float
  amountPaid      Float
  status          String // "Pending", "Paid", "Cancelled"
  lastPaymentDate DateTime  @default(now())
  payments        Payment[]
}

model Payment {
  id        String   @id @default(cuid())
  layawayId String
  date      DateTime @default(now())
  amount    Float
  method    String   // "Cash", "M-Pesa", "Card"
  layaway   Layaway  @relation(fields: [layawayId], references: [id], onDelete: Cascade)
}

model AuditLog {
  id        String   @id @default(cuid())
  timestamp DateTime @default(now())
  user      String
  action    String
  details   String
}


// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Product {
  id                String  @id @default(cuid())
  name              String  @unique
  sku               String? @unique
  category          String
  stock             Int
  price             Int
  lowStockThreshold Int
  cost              Int
  minPrice          Int
  supplier          String?
  description       String?
  imageUrl          String? @default("https://placehold.co/150x150.png")
  sales             SaleItem[]
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Sale {
  id            String    @id @default(cuid())
  date          DateTime  @default(now())
  customerName  String
  total         Int
  paymentMethod String
  items         SaleItem[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model SaleItem {
  id        String  @id @default(cuid())
  sale      Sale    @relation(fields: [saleId], references: [id], onDelete: Cascade)
  saleId    String
  product   Product @relation(fields: [productId], references: [id])
  productId String
  name      String
  quantity  Int
  price     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Layaway {
  id              String    @id @default(cuid())
  customerName    String
  productName     String
  totalAmount     Int
  amountPaid      Int
  status          String // e.g., 'Pending', 'Paid', 'Cancelled'
  lastPaymentDate DateTime
  payments        Payment[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Payment {
  id        String   @id @default(cuid())
  layaway   Layaway  @relation(fields: [layawayId], references: [id], onDelete: Cascade)
  layawayId String
  amount    Int
  method    String
  date      DateTime @default(now())
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  user      String
  action    String
  details   String
  timestamp DateTime @default(now())
}
